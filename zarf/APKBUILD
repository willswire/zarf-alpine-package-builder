pkgname=zarf
pkgver=0.26.1
pkgrel=0
pkgdesc="DevSecOps for Air Gap & Limited-Connection Systems"
url="https://zarf.dev/"
arch="all"
license="Apache-2.0"
depends=""
makedepends="go nodejs"
checkdepends=""
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-v$pkgver.tar.gz::https://github.com/defenseunicorns/$pkgname/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver/"

build() {
	make ensure-ui-build-dir
	make build-cli-linux-amd
}

check() {
	make init-package
}

package() {
	make DESTDIR="$pkgdir" install
}

